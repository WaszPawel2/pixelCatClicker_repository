    <ImageView
        android:id="@+id/cat_id"
        android:layout_width="167dp"
        android:layout_height="199dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="600dp"
        app:srcCompat="@drawable/cat1" />

</LinearLayout>